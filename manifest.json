{
  "name": "Getting Started Example",
  "version": "1.0",
  "description": "Build an Extension!",
  "permissions": [
    "declarativeContent",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "*://www.youtube.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://i.ytimg.com/*",
        "*://www.youtube.com/*",
        "*://m.youtube.com/*"
      ],
      "js": [
        "js/youtube.js"
      ]
    }
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/flickbait_icon16.png",
      "32": "images/flickbait_icon32.png",
      "48": "images/flickbait_icon48.png",
      "128": "images/flickbait_icon128.png"
    }
  },
  "manifest_version": 2
}